<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FotosActivity">
    <RelativeLayout
        android:id="@+id/toolbarFotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6B8B8"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32sp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"/>


        <TextView
            android:layout_toRightOf="@id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fotos"
            android:textStyle="bold"
            android:textSize="22sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbarFotos">

        <RelativeLayout
            android:id="@+id/servicio1"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nameservicio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="Servicio corte de cabello"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Foto"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.AppCompat.Button"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/nameservicio1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nameservicio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="Servicio corte de cabello"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Foto"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.AppCompat.Button"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/nameservicio2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nameservicio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="Servicio corte de cabello"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Foto"
                    android:layout_alignParentEnd="true"
                    style="@style/Widget.AppCompat.Button"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/nameservicio3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_imgdefaul"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>



  </RelativeLayout>
